<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/listverbslayout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TitleVerb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Title Verb"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#ec8e1d"
                    android:textStyle="bold|italic"
                    android:typeface="monospace"
                    app:fontFamily="sans-serif-condensed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.17"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/traduccion" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DatosTraduccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TextView"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#3b68aa"
                    android:textStyle="bold|italic"
                    android:typeface="monospace"
                    app:fontFamily="sans-serif-condensed"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/lineaSeparadora"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/linea" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:layout_below="@+id/lineaSeparadora"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:gravity="center">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/presente" />

                <TextView
                    android:id="@+id/Datos1Present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Become"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#3b68aa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:gravity="center">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/presente" />

                <TextView
                    android:id="@+id/Datos2Past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Became"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#3b68aa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/pparticipio" />

                <TextView
                    android:id="@+id/Datos3PP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Become"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#3b68aa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-condensed" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>